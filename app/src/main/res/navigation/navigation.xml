<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="org.ieselcaminas.aitor.pocketrol.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_lobbyFragment"
            app:destination="@id/lobbyFragment"
            app:popUpTo="@+id/navigation" />
    </fragment>
    <fragment
        android:id="@+id/charactersFragment"
        android:name="org.ieselcaminas.aitor.pocketrol.characters.CharactersFragment"
        android:label="CharactersFragment" >
        <action
            android:id="@+id/action_charactersFragment_to_characterCardFragment"
            app:destination="@id/characterCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterCardFragment"
        android:name="org.ieselcaminas.aitor.pocketrol.charactercard.CharacterCardFragment"
        android:label="CharacterCardFragment" >
        <argument
            android:name="chrId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/lobbyFragment"
        android:name="org.ieselcaminas.aitor.pocketrol.lobby.LobbyFragment"
        android:label="LobbyFragment" >
        <action
            android:id="@+id/action_lobbyFragment_to_charactersFragment"
            app:destination="@id/charactersFragment" />
        <argument
            android:name="userUID"
            app:argType="string" />
    </fragment>
</navigation>